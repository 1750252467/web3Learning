syntax = "v1"

type (
	UserInfoReq {
		UserId int64 `json:"userId"`
	}
	UserInfoResp {
		UserId   int64  `json:"userId"`
		Nickname string `json:"nickname"`
	}
)

type (
	UserUpdateReq {
		UserId   int64  `json:"userId"`
		Nickname string `json:"nickname"`
	}
	UserUpdateResp {
		Flag bool `json:"flag"`
	}
)

@server (
	group:  user
	prefix: userapi/v1
)
service user-api {
	@doc "获取用户信息"
	@handler UserInfo
	post /user/info (UserInfoReq) returns (UserInfoResp)

	@doc "修改用户信息"
	@handler UserUpdate
	post /user/update (UserUpdateReq) returns (UserUpdateResp)
}

